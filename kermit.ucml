-- ucml file for Kermit terminal

Meta:
  Title: "Kermit terminal emulator config"
  About: "a simple config to test ucfml"
  Upstream: "https://github.com/orhun/kermit#config-file"

Body:
  [ OptSection:
      Title: "not so visible"
        About: "these settings don't change the looks"
        Options:
          [ Option:
              Title: "Locale"
              About: "There are two options, USA, or Australia."
              RefVar: loc
              Input:
                Dropdown:
                  OptList:
                    [ ->("US english", "en_US.UTF-8")
                    , ("AUS englsh", "en_AU.UTF-8")]
                  Required: True
          ,Option:
              Title: "Word Character Exceptions"
              About: "The nonalphanumeric characters that will count as part of a word they are in"
              RefVar: charex
              Input:
                TextInput:
                  Required: True
                  Default: "-./?%&#_=+@~"
                  Validator:
                    [ MustNot:
                        Condition:
                          RegExp:
                            Source: $charex
                            Regex: "/([A-Z]|[a-z]|[0-9]|\s)/"
                        Hint: "This should not contain any alphanumeric or whitespace characters"
                    ]
          ,Option:
              Title: "Action key binding"
              About: "a key for actions"
              RefVar: actkey
              Input:
                RadioButton:
                  OptList:
                    [ ->("alt", "alt")
                    , ("shift", "shift")]
                  Required: True
          ]
  , OptSection:
      Title: "very visible"
      About: "these settings directly affect the look of the terminal"
      Options:
        [ Option:
            Title: "Cursor Shape"
            About: "how to display the cursor"
            RefVar: curshape
            Input:
              Dropdown:
                OptList:
                  [ ->("block â–ˆ", "block")
                  , ("ibeam |", "ibeam")
                  , ("underline _", "underline")]
              Required: True
        , Option:
            Title: "Tab Position"
            About: "where to list tabs when you have multiple tabs open"
            RefVar: tabpos
            Input:
              RadioButton:
                OptList:
                  [ ("top", "top")
                  , ->("bottom", "bottom")]
                Required: True
        , Option:
            Title: "Terminal Font"
            About:
            RefVar: font
            Input:
              Compound:
                [ ( "fontfamily"
                  , List:
                      Default: ["monospace"]
                      Input:
                        Dropdown:
                          OptList:
                            [ ("normal", "")
                            , ("sans", "sans")
                            , ("serif", "serif")
                            , ("monospace", "monospace")]
                          Required: False)
                , ( "style"
                  , List:
                      Default: []
                      Input:
                        Dropdown:
                          OptList:
                            [ ("normal","")
                            , ("oblique","oblique")
                            , ("italic","italic")]
                          Required: False)
                , ( "weight"
                  , List:
                      Default: []
                      Input:
                        Dropdown:
                          OptList:
                            [ ("ultra light","ultra-light")
                            , ("light","light")
                            , ("normal","")
                            , ("bold","bold")
                            , ("ultra bold","ultra-bold")
                            , ("heavy","heavy")]
                          Required: False)
                , ( "variants"
                  , List:
                      Default: []
                      Input:
                        Dropdown:
                          OptList:
                            [ ("normal","")
                            , ("small caps","small-caps")]
                          Required: False)
                , ( "stretch style"
                  , List:
                      Default: []
                      Input:
                        Dropdown:
                          OptList:
                            [ ("ultra condensed","ultra-condensed")
                            , ("extra condensed","extra-condesned")
                            , ("condensed","condensed")
                            , ("semi-condensed","semi-condensed")
                            , ("normal","")
                            , ("semi-expanded","semi-expanded")
                            , ("expanded","expanded")
                            , ("extra expanded","extra-expanded")
                            , ("ultra expanded","ultra-expanded")]
                          Required: False)
                , ( "size"
                  , Number:
                      Float: False
                      Signed: False
                      LRange: 0
                      URange:
                      Base:
                      Required: False
                      Default: 9
                      Validator: )
                ]
        , Option:
            Title: "transparency"
            About: "a number from 0.0 to 1.0 with 0 being fully transparent and 1 being opaque"
            RefVar: "opacity"
            Input:
              Number:
                Float: True
                Signed: False
                LRange: 0
                URange: 1
                Base:
                Required: False
                Default: 0.96
                Validator:
        , Option:
            Title: "foreground color"
            About:
            RefVar: "fgcolor"
            Input:
              Number:
                Float: False
                Signed: False
                LRange: 0x000000
                URange: 0xffffff
                Base: Hex
                Required: True
                Default: 0xffffff
                Validator:
        , Option:
            Title: "bold foreground color"
            About:
            RefVar: "fgbold"
            Input:
              Number:
                Float: False
                Signed: False
                LRange: 0x000000
                URange: 0xffffff
                Base: Hex
                Required: True
                Default: 0xffffff
                Validator:
        , Option:
            Title: "Cursor color"
            About:
            RefVar: curCol
            Input:
              Number:
                Float: False
                Signed: False
                LRange: 0x000000
                URange: 0xffffff
                Base: Hex
                Required: True
                Default: 0x00cc00
                Validator:
        , Option:
            Title: "Cursor foreground"
            About:
            RefVar: "curfg"
            Input:
              Number:
                Float: False
                Signed: False
                LRange: 0x000000
                URange: 0xffffff
                Base: Hex
                Required: True
                Default: 0xefecf4
                Validator:
        , Option:
            Title: "background color"
            About:
            RefVar: bgcol
            Input:
              Number:
                Float: False
                Signed: False
                LRange: 0x000000
