  , Option:
      Title: "Shortcuts"
      About: "hotkeys, the text they expand to, and whether to run or paste it"
      RefVar: hotkeys
      Input:
        List:
          Input:
            Compound:
              [ ( "insert or execute the bound text"
                , RadioButton:
                    OptList:
                      [ ("insert", "bind")
                      , ("execute", "bindx") ]
                    Required: True)
              , ( "binding key"
                , TextInput:
                    Required: True
                    MinLen: 1
                    MaxLen: 1)
              , ( "text to expand to"
                , TextInput:
                    Required: True
                    MinLen: 1)
              ]
          Default: []
